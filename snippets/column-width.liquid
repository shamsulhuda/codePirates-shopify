{% comment %} 
Use this snippet for column width
for Include
{% assign column = section.settings.product_per_row %}
{% include 'column-width' %}
For render
{% render 'column-width', column: column %}
{% endcomment %}

{% liquid
  case column 
   when '2' 
   assign col_width = 'col-lg-2 col-md-2'

   when '3' 
   assign col_width = 'col-lg-3 col-md-3'

   when '4' 
   assign col_width = 'col-lg-4 col-md-4'

   when '6' 
   assign col_width = 'col-lg-6 col-md-6'
  
  endcase %}