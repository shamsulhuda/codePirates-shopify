<div id="page-content">
  <!--Collection Banner-->
  <div class="collection-header">
      <div class="collection-hero">
          <div class="collection-hero__image">
            {% if collection.image != nil %}
            <img class="blur-up lazyload" data-src="{{ collection.image | img_url:'master' }}" src="{{ collection.image | img_url:'master' }}" alt="{{ collection.image.alt | escape }}" title="{{ collection.title }}" />
            {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag }}
            {% endif %}
          </div>
          <div class="collection-hero__title-wrapper">
            <h1 class="collection-hero__title page-width">{{ collection.title | escape }}</h1>
          </div>
      </div>
  </div>
</div>
  <!--End Collection Banner-->
