<!--Store Guarantee -->
<div class="store-feature section">
  <div class="container">
      <div class="row">
          <div class="col-12 col-sm-12 col-md-12 col-lg-12">
              <ul class="display-table store-info">
                {% for block in section.blocks %}
                  <li class="display-table-cell">
                      {% if block.settings.custom_icon != nil %}
                      <img class="icon" src="{{ block.settings.custom_icon | img_url:'icon' }}" alt="{{ block.settings.title }}">
                      {% else %}
                      <i class="icon bi {{ block.settings.icon }}"></i>
                      {% endif %}
                      <h5>{{ block.settings.title }}</h5>
                      <span class="sub-text">{{ block.settings.subtitle }}</span>
                  </li>
                {% endfor %}
              </ul>
          </div>
      </div>
  </div>
</div>
<!--End Store Guarantee-->

